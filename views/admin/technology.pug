extends layout

block content
    .content-header: .container-fluid: .row.mb-2
        .col-sm-4.d-flex.justify-content-start: ol.breadcrumb.float-sm-right
            li.breadcrumb-item: a(href="/admin") Администратор
            li.breadcrumb-item.active Инструменты
    .content: .container-fluid: .card#app
        if (technologys.length === 0) 
            p.ml-2 Нет информации о ваших инструментах
        else 
            table.table
                thead
                    tr
                        th #
                        th Изображение
                        th Удалить
                        th Редактировать
                        th Узнать больше
                tbody
                    each technology, i in technologys
                        tr
                            th #{i+1}
                            td 
                                img.skills_img(src=`/images/technologys/${technology.technologyImg.filename}` alt="png")
                            td
                                a(href=`/admin/deleteTechnology/${technology._id}`).btn.btn-danger Удалить
                            td
                                a(href=`/admin/editTechnology/${technology._id}`).btn.btn-primary Редактировать
                            td
                                a(href=`/admin/technologyInfo/${technology._id}`).btn.btn-info Узнать больше
        .col-lg-3
            a(href="/admin/addEditTechnology" class="btn btn-primary mb-2 ml-2 mt-2") Создать новый
