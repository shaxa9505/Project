extends layout

block content
    .container
        .row.justify-content-center
            .col-lg-6
                img(src=`/img/login2.png` alt="png" style="width: 100%")
            .col-lg-6
                .user_card
                    form(method="POST" action="/login")
                        h2= l.admin
                        input(type="email" value=`${email && email !== "@" ? email : ""}` name="email" placeholder=l.email)
                        input(type="password" value=password ? password : "" name="password" placeholder=l.password)
                        button(type="submit" class="submit") #{l.send}